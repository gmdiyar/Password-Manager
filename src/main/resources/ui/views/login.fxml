<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #39325c;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.passwordmanager.controllers.LoginController">
   <children>
      <VBox alignment="CENTER" prefHeight="213.0" prefWidth="312.0" spacing="10.0">
         <children>
            <TextField fx:id="usernameForm" alignment="CENTER" prefHeight="12.0" prefWidth="237.0" promptText="Username" />
            <PasswordField fx:id="passwordForm" alignment="CENTER" prefHeight="25.0" prefWidth="257.0" promptText="Password" />
            <Button fx:id="loginButton" alignment="CENTER" contentDisplay="RIGHT" defaultButton="true" mnemonicParsing="false" onAction="#login" prefHeight="25.0" prefWidth="120.0" text="Log in" textAlignment="CENTER" />
            <Button fx:id="signUp" mnemonicParsing="false" onAction="#signUp" prefHeight="25.0" prefWidth="120.0" text="Sign up" />
         </children>
         <padding>
            <Insets left="500.0" right="500.0" top="200.0" />
         </padding>
         <StackPane.margin>
            <Insets />
         </StackPane.margin>
      </VBox>
   </children>
</StackPane>
